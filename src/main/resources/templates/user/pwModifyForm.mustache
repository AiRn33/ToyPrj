
{{>layout/header}}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
    function check() {

        var userPassword = $("#userPassword").val();

        if(!userPassword){
            alert("비밀번호를 입력해주세요");
            $("#userPassword").focus();
            return false;
        }
    }
</script>

<body>
<br><br><br><br><br><br>

<div class="container text-center">
    <br>
    <div class="row">

        <div class="col-3"></div>
        <!-- Pills navs -->
        <div class="col-6">

            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" role="tab"
                       aria-controls="pills-login" aria-selected="true">비밀번호 변경</a>
                </li>
            </ul>
            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <!-- Email input -->
                   <form action="/user/pwModifyProc" method="post" onsubmit="return check()">
                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>변경할 비밀번호</button>
                        </p>

                        <div class="form-outline mb-4">
                            <input type="password" id="userPassword" name="userPassword" class="form-control text-center"/>
                        </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-4">수정하기</button>
                    <a class="btn btn-danger btn-block mb-4" onclick="location.href='/user/mypage'">돌아가기</a>
                   </form>
                    <!-- Register buttons -->
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    </div>




</body>
</html>
