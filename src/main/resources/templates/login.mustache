{{>layout/header}}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
function check() {
    var loginName = $("#loginName").val();
    var password = $("#password").val();

    if(!loginName){
        alert("아이디를 입력해주세요");
        $("#loginName").focus();
        return false;
    }else if(!password){
       alert("비밀번호를 입력해주세요");
       $("#password").focus();
       return false;
    }
}

</script>

<body>

<br><br><br><br><br><br>

<div class="container text-center">
    <br>
    <div class="row">

        <div class="col-3"></div>
        <!-- Pills navs -->
        <div class="col-6">
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" role="tab"
                       aria-controls="pills-login" aria-selected="true">Login</a>
                </li>
            </ul>
            <!-- Pills navs -->

            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <form action="/login" method="post" onsubmit="return check()">
                        <!-- Email input -->
                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>아이디</button>
                        </p>

                        <div class="form-outline mb-4">
                            <input type="text" id="loginName" name="userId" class="form-control text-center"/>
                        </div>

                        <!-- Password input -->
                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>비밀번호</button>
                        </p>
                        <div class="form-outline mb-4">
                            <input type="password" id="password" name="password" class="form-control text-center"/>
                        </div>
                        <span>
                            {{#error}}
                                <p id="valid" class="alert alert-danger">{{exception}}</p>
                            {{/error}}
                        </span>
                        <!-- 2 column grid layout -->
                        <div class="row mb-3">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Simple link -->
                                <a href="/findId">아이디를 잊어버리셨나요?</a>
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">로그인</button>
                        <a class="btn btn-danger btn-block mb-4" onclick="location.href='/main'">돌아가기</a>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>회원이 아니신가요? <a href="/signupCheck">회원가입</a></p>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    </div>


</body>
</html>