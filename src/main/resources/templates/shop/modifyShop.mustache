{{>layout/header}}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
function check() {

    var shopTitle = $("#shopTitle").val();
    var shopContent = $("#shopContent").val();
    var shopAmount = $("#shopAmount").val();
    var fileCheck = $("#file_check").val();
    var shopPrice = $("#shopPrice").val();

    if(!shopTitle){
        alert("상품 이름을 입력해주세요");
        $("#shopTitle").focus();
        return false;
    }else if(!shopContent){
        alert("상품 설명을 입력해주세요");
        $("#shopContent").focus();
        return false;
    }else if(!shopAmount){
        alert("상품 갯수를 입력해주세요");
        $("#shopAmount").focus();
        return false;
    }else if(!fileCheck){
        alert("파일을 첨부해 주세요");
        $("#fileCheck").focus();
        return false;
    }else if(!shopPrice){
        alert("상품 가격을 입력해주세요");
        $("#shopPrice").focus();
        return false;
    }

}
</script>

<body>

<br><br><br><br><br><br>
<div class="container text-center">
    <br>
    <div class="row">

        <div class="col-3"></div>
        <!-- Pills navs -->
        <div class="col-6">

            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" role="tab"
                       aria-controls="pills-login" aria-selected="true">판매 물품 사진</a>
                </li>
            </ul>
            <!-- Pills content -->
        <div class="tab-content">
        <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
            <!-- Email input -->
        <form action="/shop/modifyShop/{{shopNumber}}" method="post" enctype="multipart/form-data" onsubmit="return check()">

            {{#shop}}
                <div class="form-outline mb-3">
                    <input type="image" src="/img/{{id}}/{{fileUuid}}" style="max-width: 636px; height: 100%;">
                </div>
                <p class="text-center">
                    <button class="btn btn-primary me-2" disabled>제목</button>
                </p>

                <div class="form-outline mb-4">
                    <input type="text" id="shopTitle" name="shopTitle" class="form-control text-center"
                           value="{{shopTitle}}"/>
                </div>

                <p class="text-center">
                    <button class="btn btn-primary me-2" disabled>내용</button>
                </p>

                <div class="form-outline mb-3">
                        <textarea rows="10px" id="shopContent" name="shopContent"
                                  class="form-control text-center">{{shopContent}}</textarea>
                </div>
                <p class="text-center">
                    <button class="btn btn-primary me-2" disabled>남은 갯수</button>
                    <button class="btn btn-danger me-2" disabled>사진 업로드</button>
                </p>

                <div class="form-outline mb-3">
                    <input type="text" id="shopAmount" name="shopAmount" class="form-control text-center"
                           oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                           placeholder="숫자만 입력이 가능합니다" value="{{shopAmount}}"/>
                </div>
                <div class="form-outline mb-3">
                    <input type="file" name="file" id="file_check" value="파일 업로드">
                </div>
                <p class="text-center">
                    <button class="btn btn-primary me-2" disabled>판매 가격</button>
                </p>

                <div class="form-outline mb-3">
                    <input type="text" name="shopPrice" id="shopPrice"  class="form-control text-center"
                           oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                           placeholder="숫자만 입력이 가능합니다"/>
                </div>
                <div class="form-outline mb-3">
                    <button type="submit" class="btn btn-primary">작성하기</button>
                    <a class="btn btn-primary" onclick="location.href='javascript:history.back()'">돌아가기</a>
                </div>
            </div>
            </div>
            {{/shop}}
        </div>

        <div class="col-3"></div>
    </div>

</div>

<br>
</body>
</html>