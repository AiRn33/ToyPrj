{{>layout/header}}
<!-- Title -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
function check() {
    var fileCheck = $("#file_check").val();

    if(!fileCheck){
        alert("파일을 첨부해 주세요");
        return false;
    }
}
</script>
<!-- End Title-->
<br><br><br><br><br><br>

<div class="container text-center">
    <br>
    <div class="row">

        <div class="col-3"></div>
        <!-- Pills navs -->
        <div class="col-6">

            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" role="tab"
                       aria-controls="pills-login" aria-selected="true">판매글 작성</a>
                </li>
            </ul>
            <!-- Pills content -->

            <form action="/shop/upload" method="post" enctype="multipart/form-data" onsubmit="return check()">

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                        <!-- Email input -->
                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>제목</button>
                        </p>

                        <div class="form-outline mb-4">
                            <input type="text" name="shopTitle" class="form-control text-center"/>
                        </div>

                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>내용</button>
                        </p>

                        <div class="form-outline mb-3">
                            <textarea rows="10px" name="shopContent" class="form-control text-center"></textarea>
                        </div>

                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>판매 갯수</button>
                            <button class="btn btn-danger me-2" disabled>사진 업로드</button>
                        </p>

                        <div class="form-outline mb-3">
                            <input type="text" name="shopAmount" class="form-control text-center"
                                   oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                                   placeholder="숫자만 입력이 가능합니다"/>
                        </div>
                        <div class="form-outline mb-3">
                            <input type="file" id="file_check" name="file" value="파일 업로드">
                        </div>

                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>판매 가격</button>
                        </p>

                        <div class="form-outline mb-3">
                            <input type="text" name="shopPrice" class="form-control text-center"
                                   oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                                   placeholder="숫자만 입력이 가능합니다"/>
                        </div>

                        <div class="form-outline mb-3">
                            <button type="submit" class="btn btn-primary">작성하기</button>
                            <a class="btn btn-danger" onclick="location.href='/shop/main'">돌아가기</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="col-3"></div>
        </div>
    </div>
</div>

<br>
<br>
<br>
<br>
<br>
<br>
<!-- End Card -->

</body>
</html>