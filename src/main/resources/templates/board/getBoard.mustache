{{>layout/header}}
<body>

<br><br><br><br><br><br>
<div class="container text-center">
    <br>
    <div class="row">

        <div class="col-3"></div>
        <!-- Pills navs -->
        <div class="col-6">

            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" role="tab"
                       aria-controls="pills-login" aria-selected="true">게시글 확인</a>
                </li>
            </ul>
            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <!-- Email input -->
                    <p class="text-center">
                        <button class="btn btn-primary me-2" disabled>제목</button>
                    </p>

                    <div class="form-outline mb-4">
                        <input type="text" id="loginName" name="boardTitle" class="form-control text-center"
                               value="{{board.boardTitle}}" disabled/>
                    </div>

                    <p class="text-center">
                        <button class="btn btn-primary me-2" disabled>내용</button>
                    </p>

                    <div class="form-outline mb-3">
                        <textarea rows="10px" name="boardContent" class="form-control text-center"
                                  disabled>{{board.boardContent}}</textarea>
                    </div>

                    <div class="form-outline mb-3">
                        {{#check}}
                            <a class="btn btn-success"
                               onclick="location.href='/board/modifyBoard/{{board.boardNumber}}'">글 수정</a>
                            <a class="btn btn-danger"
                               onclick="location.href='/board/deleteBoard/{{board.boardNumber}}'">글 삭제</a>
                        {{/check}}
                        <a class="btn btn-primary" onclick="location.href='javascript:history.back()'">돌아가기</a>
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    </div>

    <br>
</body>
</html>