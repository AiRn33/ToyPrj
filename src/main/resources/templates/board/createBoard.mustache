{{>layout/header}}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script>
function check() {
    var boardTitle = $("#boardTitle").val();
    var boardContent = $("#boardContent").val();

    if(!boardTitle){
        alert("게시판 제목을 입력해주세요");
        $("#boardTitle").focus();
        return false;
    }else if(!boardContent){
        alert("게시판 내용을 입력해주세요");
        $("#boardContent").focus();
        return false;
    }
}

</script>

<body>

<br><br><br><br><br><br>
<div class="container text-center">
    <br>
    <div class="row">

        <div class="col-3"></div>
        <!-- Pills navs -->
        <div class="col-6">

            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" role="tab"
                       aria-controls="pills-login" aria-selected="true">게시글 작성</a>
                </li>
            </ul>
            <!-- Pills content -->
            <form action="/createBoardProc" method="POST" id="formData" onsubmit="return check();">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                        <!-- Email input -->
                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>제목</button>
                        </p>

                        <div class="form-outline mb-4">
                            <input type="text" id="boardTitle" name="boardTitle" class="form-control text-center"/>
                        </div>

                        <p class="text-center">
                            <button class="btn btn-primary me-2" disabled>내용</button>
                        </p>

                        <div class="form-outline mb-3">
                            <textarea rows="10px" id="boardContent" name="boardContent" class="form-control text-center"></textarea>
                        </div>
                        <div class="form-outline mb-3">
                            <button type="submit" class="btn btn-primary">작성하기</button>
                            <a class="btn btn-danger" onclick="location.href='/board/getBoardList'">돌아가기</a>
                        </div>
                    </div>
                </div>
            </form>
            <div class="col-3"></div>
        </div>

    </div>

    <br>
</body>
</html>