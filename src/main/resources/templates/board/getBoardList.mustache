{{>layout/header}}
<body>
<style>
	#paging { text-align: center; }


</style>
<br><br><br>
<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col col-lg-9 col-xl-7">
            <div class="card rounded-3">
                <div class="card-body p-4">
                    <h4 class="text-center my-3 pb-3">게시판</h4>

                    <table class="table table-hover mb-4 text-center">
                        <thead>
                        <tr>
                            <th scope="col">게시글</th>
                            <th scope="col">작성자</th>
                            <th scope="col" style="width:500px">제목</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{# board}}
                            <tr onClick="location.href='/board/getBoard/{{boardNumber}}'">
                                <th scope="row">{{boardNumber}}</th>
                                <td>{{boardWriter}}</td>
                                <td>{{boardTitle}}</td>
                            </tr>
                        {{/board}}
                        {{^board}}
                            <tr>
                                <td colspan="3">입력된 게시글이 없습니다</td>
                            </tr>
                        {{/board}}
                        </tbody>
                    </table>

                    <div class="container text-center">
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-8">
                                <a class="btn btn-primary btn-block mb-4"
                                   onclick="location.href='/board/createBoard'">글
                                    생성하기</a><br>
                            </div>
                        </div>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            {{#start}}
                                <li class="page-item">
                                    <a class="page-link" href="/board/getBoardList?page={{start}}"-3>이전</a>
                                </li>
                            {{/start}}
                            {{#page}}
                                <li class="page-item"><a class="page-link"
                                                         href="/board/getBoardList?page={{pageNum}}
                                    ">{{pageView}}</a></li>
                            {{/page}}
                            {{#end}}
                            <li class="page-item">
                                <a class="page-link" href="/board/getBoardList?page={{end}}"+3>다음</a>
                            </li>
                            {{/end}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>