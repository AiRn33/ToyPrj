{{>layout/header}}
<body>
<style>
	#paging { text-align: center; }
</style>
<br><br><br><br><br><br>

<div class="container text-center">
    <div class="row">

        <div class="col-2"></div>
        <div class="col-8">

            <table class="table table-striped table-hover">
                <thead>
                    <tr class="center">
                        <td>게시글 번호</td>
                        <td>작성자</td>
                        <td style="width:500px">제목</td>
                    </tr>
                </thead>
                {{# board}}
                <tbody>
                    <tr onClick="location.href='/board/getBoard/{{boardNumber}}'">
                        <td> {{boardNumber}}</td>
                        <td>{{boardWriter}}</td>
                        <td>{{boardTitle}}</td>
                    </tr>
                </tbody>
                {{/board}}
                {{^board}}
                    <tr>
                        <td colspan="3">입력된 게시글이 없습니다</td>
                    </tr>
                {{/board}}
                </table>

                    <div class="container text-center">
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="col-8">
                            <a class="btn btn-primary btn-block mb-4" onclick="location.href='/board/createBoard'">글 생성하기</a><br>
                            </div>
                        </div>
                    </div>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">이전</a>
                    </li>
                    {{#page}}
                        <li class="page-item"><a class="page-link" href="/board/getBoardList?page={{pageNum}}">{{pageView}}</a></li>
                    {{/page}}
                    <li class="page-item">
                        <a class="page-link" href="#">다음</a>
                    </li>
                </ul>
            </nav>


        </div>
        <div class="col-2"></div>

    </div>
</div>
</body>
</html>